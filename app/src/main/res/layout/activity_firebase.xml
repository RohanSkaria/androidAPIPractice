<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- "Login" panel, visible if the user hasn't logged in yet -->
    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Username field -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username" />

        <!-- Password field (any input accepted) -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter ANY Password"
            android:inputType="textPassword" />

        <!-- Login button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login (No Password Check)" />
    </LinearLayout>

    <!-- Main content, once logged in -->
    <LinearLayout
        android:id="@+id/mainPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <!-- Show group name -->
        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group: MyAwesomeGroup"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Friend's username -->
        <EditText
            android:id="@+id/etFriendUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Friend's Username" />

        <!-- Spinner for sticker selection -->
        <Spinner
            android:id="@+id/spinnerStickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Button to send a sticker -->
        <Button
            android:id="@+id/btnSendSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Sticker" />

        <!-- TextView for displaying sticker counts -->
        <TextView
            android:id="@+id/tvStickerCounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Counts of Stickers Sent: (load from DB)"
            android:layout_marginTop="16dp" />

        <!-- TextView for showing sticker history -->
        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="History of Received Stickers"
            android:layout_marginTop="16dp" />

        <!-- Button to open the "About" panel -->
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About" />
    </LinearLayout>

    <!-- "About" panel -->
    <LinearLayout
        android:id="@+id/aboutPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Members:\n(Your group info here)"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBackFromAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
