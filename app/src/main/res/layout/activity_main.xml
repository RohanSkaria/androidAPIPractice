<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/best_group"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonApi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/go_to_api_screen"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvGroupName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="12dp" />


    <Button
        android:id="@+id/buttonFirebase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/go_to_firebase_screen"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/buttonApi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
