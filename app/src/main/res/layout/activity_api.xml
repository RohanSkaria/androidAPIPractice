<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apiLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ApiActivity">

    <!-- Spinner to select which API call to make -->
    <Spinner
        android:id="@+id/spinnerApiSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Animated loading text (instead of a static progress bar) -->
    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <!-- Button to fetch data from selected API -->
    <Button
        android:id="@+id/btnFetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Crypto Data"
        android:layout_marginTop="8dp" />

    <!--
         ADDED FOR DYNAMIC INPUT (Hello, dynamic layouts!)
         This container will hold multiple EditTexts, one for each user-specified coin ID.
    -->
    <LinearLayout
        android:id="@+id/dynamicInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!--
         Button to add new EditText fields for coin IDs. Only visible if
         the user selects the new spinner option ("CoinGecko: user-specified IDs").
    -->
    <Button
        android:id="@+id/btnAddId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Coin ID"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- RecyclerView to display fetched coins -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCoins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

</LinearLayout>